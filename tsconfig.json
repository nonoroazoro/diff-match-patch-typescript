{
    "compilerOptions": {
        "rootDir": "src",
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "allowUnreachableCode": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "verbatimModuleSyntax": true,
        "lib": [
            "ESNext"
        ]
    },
    "include": [
        "src"
    ]
}
